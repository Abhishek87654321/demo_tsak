<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table class= "table table-borderless">
<%if @blogs.present?%>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
     
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.description %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_post_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } , :remote => true, :class => 'delete_blog'%></td>
      </tr>
    <% end %>
    <%else%>
    <tr class = "btn-danger" scope="row"> yet no blog</tr>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>